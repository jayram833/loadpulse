{
  "name": "loadpulse",
  "private": true,
  "version": "0.0.0",
  "author": "Jay",
  "description": "LoadPulse is a lightweight desktop app that mimics MS Teams channel messaging for logistics bots. It receives real-time BID/NO BID updates from bots via WebSocket, stores messages in a local SQLite database, and displays them in an organized channel-based interface.",
  "type": "module",
  "main": "electron/main.js",
  "build": {
    "appId": "com.example.loadpulse",
    "productName": "LoadPulse",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/icon.icns",
      "identity": null,
      "category": "public.app-category.utilities"
    },
    "extraResources": [
      {
        "from": "electron/database/database/loadpulse.db",
        "to": "loadpulse.db"
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**",
      "node_modules/ws/**"
    ]

  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "better-sqlite3": "^11.10.0",
    "body-parser": "^2.2.0",
    "cross-env": "^7.0.3",
    "express": "^5.1.0",
    "lucide-react": "^0.518.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  }
}
